# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here

# External API
CARBON_INTENSITY_BASE_URL=https://api.carbonintensity.org.uk

# Database Configuration
# For Railway: Use DATABASE_URL (automatically provided by Railway when you add Postgres)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# For local development with individual variables:
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# Production Settings
# For Railway, use: .railway.app
# For Render, use: .onrender.com
ALLOWED_HOSTS=localhost,127.0.0.1,.railway.app,.onrender.com

# CORS Settings (comma-separated list of allowed origins for production)
# Example: CORS_ALLOWED_ORIGINS=https://yourfrontend.com,https://www.yourfrontend.com
CORS_ALLOWED_ORIGINS=
